{
  "name": "api-boilerplate",
  "version": "0.0.1",
  "description": "An Api Boilerplate to start new projects",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "engines": {
    "node": ">=7.0.0"
  },
  "scripts": {
    "start": "node --harmony-async-await index.js",
    "eslint": "eslint --ignore-path .npmignore **/**/*.js --quiet",
    "david": "david",
    "lab": "lab --verbose --colors --assert code -e development",
    "test-cov": "npm run lab -- -t 93 -r console -o stdout -r html -o coverage/coverage.html -r lcov -o coverage/lcov.info",
    "test": "npm run eslint && npm run david && npm run test-cov",
    "precommit-msg": "echo 'Pre-commit checks...' && exit 0",
    "preversion": "git pull && rm -rf ./node_modules/ && npm install && npm test",
    "postversion": "git push && npm publish --access=public && git push --tags"
  },
  "pre-commit": [
    "precommit-msg",
    "test"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luanmuniz/api-boilerplate.git"
  },
  "keywords": [
    "api",
    "boilerplate"
  ],
  "author": "Luan Muniz",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/luanmuniz/api-boilerplate/issues"
  },
  "homepage": "https://github.com/luanmuniz/api-boilerplate#readme",
  "devDependencies": {
    "code": "4.0.0",
    "coveralls": "2.11.16",
    "david": "10.1.0",
    "eslint": "3.15.0",
    "lab": "12.1.0",
    "pre-commit": "1.2.2"
  },
  "dependencies": {
    "joi": "10.2.1",
    "koa": "2.0.0",
    "koa-bodyparser": "2.3.0",
    "koa-compress": "1.0.9",
    "koa-helmet": "3.1.0",
    "koa-ip": "0.1.0",
    "koa-ratelimit": "2.4.0",
    "koa-response-time": "2.0.0",
    "marked": "0.3.6",
    "moment": "2.17.1",
    "redis": "2.6.5",
    "sendgrid": "4.7.1",
    "sse4_crc32": "5.1.1"
  }
}
