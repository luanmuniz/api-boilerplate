{
  "name": "api-boilerplate",
  "version": "0.0.1",
  "description": "An Api Boilerplate to start new projects",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "start": "node --harmony-async-await index.js",
    "eslint": "eslint index.js",
    "david": "david",
    "mocha": "mocha --reporter spec",
    "cover": "istanbul cover _mocha -- -R spec test/* && istanbul check-coverage --statement 100 --branch 100 --line 100 --function 100",
    "test": "npm run eslint && npm run david && npm run mocha && npm run cover",
    "precommit-msg": "echo 'Pre-commit checks...' && exit 0",
    "preversion": "git pull && rm -rf ./node_modules/ && npm install && npm test",
    "postversion": "git push && npm publish --access=public && git push --tags"
  },
  "pre-commit": [
    "precommit-msg",
    "test"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luanmuniz/api-boilerplate.git"
  },
  "keywords": [
    "api",
    "boilerplate"
  ],
  "author": "Luan Muniz",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/luanmuniz/api-boilerplate/issues"
  },
  "homepage": "https://github.com/luanmuniz/api-boilerplate#readme",
  "devDependencies": {
    "chai": "^3.5.0",
    "coveralls": "^2.11.9",
    "david": "^9.0.0",
    "eslint": "^3.0.1",
    "istanbul": "^0.4.4",
    "mocha": "^3.1.2",
    "pre-commit": "^1.1.3",
    "rewire": "^2.5.2"
  },
  "dependencies": {
    "joi": "^9.2.0",
    "koa": "^2.0.0",
    "koa-bodyparser": "^2.2.0",
    "koa-compress": "^1.0.9",
    "koa-helmet": "^2.0.0",
    "koa-ip": "^0.1.0",
    "koa-ratelimit": "^2.3.0",
    "koa-response-time": "^2.0.0",
    "marked": "^0.3.6",
    "moment": "^2.15.1",
    "redis": "^2.6.2",
    "sendgrid": "^4.7.0",
    "sse4_crc32": "^5.1.1"
  }
}
